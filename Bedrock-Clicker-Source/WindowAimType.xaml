<Window x:Class="Bedrock_Clicker.WindowAimType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bedrock_Clicker"
        mc:Ignorable="d"
        Title="WindowAimType" Height="119" Width="144" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Rectangle Height="80" Width="128" HorizontalAlignment="Left" VerticalAlignment="Top" StrokeThickness="0" RadiusX="16" Fill="#BF000000" RadiusY="16"/>
        <Image x:Name="up" Height="64" Width="100" Source="/resources/aim-up.png" Visibility="Collapsed" OpacityMask="#CCFFFFFF" Margin="14,0,14,16"/>
        <Image x:Name="normal" Height="64" Width="100" Source="/resources/aim-normal.png" Margin="14,0,14,16" OpacityMask="#CCFFFFFF" Visibility="Visible"/>
        <Image x:Name="down" Height="64" Width="100" Source="/resources/aim-down.png" Margin="14,0,14,16" Visibility="Collapsed" OpacityMask="#CCFFFFFF"/>
        <Label x:Name="physic" Content="Vanilla Physic" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontWeight="Bold" FontSize="10" Foreground="White"/>

    </Grid>
</Window>
